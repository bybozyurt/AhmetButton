<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#ffffff"
    android:weightSum="1"
    tools:context=".MainActivity">

    <com.example.custombutton.AhmetButton
        android:id="@+id/btnTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:stateListAnimator="@null"
        android:text="B1"
        app:ab_backgroundColorNormal="#F40202"
        app:ab_radius="15dp"
        app:ab_rippleColor="@color/holo_purple"
        app:ab_rippleOpacity="150"
        app:ab_shadowColor="@color/black"
        app:ab_shadowColorBrightness="true"
        app:ab_shadowEnabled="true"
        app:ab_shadowHeight="10dp"
        app:ab_textColorNormal="@color/colorAccent"
        app:ab_useRippleEffect="true" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="deneme"
        android:layout_marginTop="10dp"/>


</LinearLayout>
